{
  "name": "whooptido-asr-captions",
  "version": "1.0.0",
  "description": "Whooptido ASR Companion App â€” local speech recognition for word-for-word captions",
  "main": "native-host.js",
  "scripts": {
    "start": "node native-host.js",
    "build": "pkg native-host.js --targets node20-macos-arm64,node20-macos-x64,node20-win-x64,node20-linux-x64 --output dist/whooptido-asr-captions",
    "build:macos-arm": "pkg native-host.js --target node20-macos-arm64 --output dist/whooptido-asr-captions-macos-arm",
    "build:macos-intel": "pkg native-host.js --target node20-macos-x64 --output dist/whooptido-asr-captions-macos-intel",
    "build:windows": "pkg native-host.js --target node20-win-x64 --output dist/whooptido-asr-captions-windows-x64",
    "build:linux": "pkg native-host.js --target node20-linux-x64 --output dist/whooptido-asr-captions-linux-x64"
  },
  "pkg": {
    "assets": [],
    "targets": [
      "node20-macos-arm64",
      "node20-macos-x64",
      "node20-win-x64",
      "node20-linux-x64"
    ]
  },
  "dependencies": {
    "chrome-native-messaging": "^0.2.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Whooptido-App/ASR-Captions.git"
  },
  "license": "MIT",
  "author": "Whooptido"
}
